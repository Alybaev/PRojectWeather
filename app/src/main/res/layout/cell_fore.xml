<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/layout_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp">

        <TextView
            android:id="@+id/time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="40sp"
            tools:text="06.12" />

        <ImageView
            android:id="@+id/forecast_image"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10sp"
            tools:src="@drawable/cloudy" />
    </LinearLayout>

    <TextView
        android:id="@+id/description_forecast"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:text="Strong Rain"
        android:textColor="@color/text_color"
        android:textSize="15sp" />


    <LinearLayout
        android:id="@+id/day_night_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:gravity="end"
        android:orientation="vertical">


        <TextView
            android:id="@+id/text_day_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableEnd="@drawable/sun24px"
            android:drawablePadding="8dp"
            android:gravity="end"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            tools:text="24C" />


        <TextView
            android:id="@+id/text_night_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableEnd="@drawable/moon24px"
            android:drawablePadding="8dp"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            tools:text="24C" />

    </LinearLayout>
</LinearLayout>